<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Processing Your Request - Instagram Growth</title>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            color: #333;
        }
        
        .processing-container {
            background: white;
            border-radius: 20px;
            padding: 50px;
            max-width: 600px;
            width: 100%;
            box-shadow: 0 30px 60px rgba(0,0,0,0.3);
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .processing-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(to right, #405de6, #833ab4, #e1306c);
        }
        
        .spinner {
            width: 80px;
            height: 80px;
            border: 6px solid #f3f3f3;
            border-top: 6px solid #405de6;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 30px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .progress-container {
            margin: 40px 0;
        }
        
        .progress-bar {
            height: 10px;
            background: #eee;
            border-radius: 5px;
            overflow: hidden;
            margin-bottom: 10px;
        }
        
        .progress-fill {
            height: 100%;
            width: 0%;
            background: linear-gradient(to right, #405de6, #833ab4);
            transition: width 0.5s ease;
        }
        
        .progress-steps {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            position: relative;
        }
        
        .step {
            text-align: center;
            position: relative;
            z-index: 1;
        }
        
        .step-icon {
            width: 40px;
            height: 40px;
            background: #eee;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px;
            font-weight: bold;
            color: #999;
        }
        
        .step.active .step-icon {
            background: #405de6;
            color: white;
        }
        
        .step.completed .step-icon {
            background: #4caf50;
            color: white;
        }
        
        .transaction-info {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
            text-align: left;
            border: 1px solid #eee;
        }
        
        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #eee;
        }
        
        .info-row:last-child {
            border-bottom: none;
        }
        
        .countdown {
            font-size: 32px;
            font-weight: bold;
            color: #405de6;
            margin: 20px 0;
            font-family: monospace;
        }
        
        .success-animation {
            font-size: 60px;
            color: #4caf50;
            margin: 20px 0;
            animation: bounce 1s infinite;
        }
        
        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        
        .whats-next {
            background: #e8f4fd;
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
            text-align: left;
            border-left: 4px solid #405de6;
        }
    </style>
</head>
<body>
    <div class="processing-container">
        <div class="spinner"></div>
        
        <h1 style="color: #262626; margin-bottom: 10px;">
            Processing Your Instagram Growth
        </h1>
        
        <p style="color: #666; margin-bottom: 30px;">
            Please wait while we verify your account and prepare your followers delivery.
        </p>
        
        <div class="transaction-info">
            <div class="info-row">
                <span>Transaction ID:</span>
                <strong><%= transactionId %></strong>
            </div>
            <div class="info-row">
                <span>User ID:</span>
                <strong><%= userId %></strong>
            </div>
            <div class="info-row">
                <span>Package:</span>
                <strong style="color: #405de6;">50,000 Followers</strong>
            </div>
            <div class="info-row">
                <span>Estimated Time:</span>
                <strong style="color: #e1306c;">2-4 Hours</strong>
            </div>
        </div>
        
        <div class="progress-container">
            <div class="progress-bar">
                <div class="progress-fill" id="progressFill"></div>
            </div>
            
            <div class="progress-steps">
                <div class="step active" id="step1">
                    <div class="step-icon">1</div>
                    <div>Verification</div>
                </div>
                <div class="step" id="step2">
                    <div class="step-icon">2</div>
                    <div>Processing</div>
                </div>
                <div class="step" id="step3">
                    <div class="step-icon">3</div>
                    <div>Delivery</div>
                </div>
                <div class="step" id="step4">
                    <div class="step-icon">4</div>
                    <div>Complete</div>
                </div>
            </div>
        </div>
        
        <div class="countdown" id="countdown">03:00</div>
        
        <div class="whats-next" style="display: none;" id="nextSteps">
            <h3 style="margin-top: 0;"><i class="fas fa-check-circle"></i> What happens next?</h3>
            <ul style="margin: 10px 0; padding-left: 20px;">
                <li>Followers will be added gradually over 2-4 hours</li>
                <li>You'll receive an email confirmation</li>
                <li>Do not change your password during delivery</li>
                <li>Engage with new followers to boost algorithm</li>
            </ul>
        </div>
        
        <div id="successMessage" style="display: none;">
            <div class="success-animation">
                <i class="fas fa-check-circle"></i>
            </div>
            <h2 style="color: #4caf50;">Successfully Verified!</h2>
            <p>Your 50,000 followers are being prepared for delivery.</p>
            <button id="dashboardBtn" style="background: #405de6; color: white; border: none; padding: 12px 30px; border-radius: 8px; font-size: 16px; cursor: pointer; margin-top: 20px;">
                Go to Dashboard
            </button>
        </div>
    </div>
    
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <script>
        // Progress simulation
        let progress = 0;
        const progressFill = document.getElementById('progressFill');
        const steps = ['step1', 'step2', 'step3', 'step4'];
        let currentStep = 0;
        
        // Countdown timer (3 minutes)
        let timeLeft = 180; // 3 minutes in seconds
        const countdownElement = document.getElementById('countdown');
        
        const timer = setInterval(() => {
            timeLeft--;
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            countdownElement.textContent = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft <= 0) {
                clearInterval(timer);
                showSuccess();
            }
        }, 1000);
        
        // Progress bar animation
        const progressInterval = setInterval(() => {
            progress += Math.random() * 5;
            if (progress > 100) {
                progress = 100;
                clearInterval(progressInterval);
            }
            progressFill.style.width = progress + '%';
            
            // Update steps
            if (progress >= 25 && currentStep === 0) {
                updateStep(1);
                currentStep = 1;
            } else if (progress >= 50 && currentStep === 1) {
                updateStep(2);
                currentStep = 2;
                document.getElementById('nextSteps').style.display = 'block';
            } else if (progress >= 75 && currentStep === 2) {
                updateStep(3);
                currentStep = 3;
            } else if (progress >= 100 && currentStep === 3) {
                updateStep(4);
                currentStep = 4;
            }
        }, 500);
        
        function updateStep(stepIndex) {
            // Mark previous steps as completed
            for (let i = 0; i < stepIndex; i++) {
                const step = document.getElementById(steps[i]);
                step.classList.remove('active');
                step.classList.add('completed');
                step.querySelector('.step-icon').innerHTML = '<i class="fas fa-check"></i>';
            }
            
            // Mark current step as active
            if (stepIndex < 4) {
                const current = document.getElementById(steps[stepIndex]);
                current.classList.add('active');
            }
        }
        
        function showSuccess() {
            document.querySelector('.spinner').style.display = 'none';
            document.getElementById('successMessage').style.display = 'block';
            document.getElementById('nextSteps').style.display = 'block';
            
            // Redirect after 5 seconds
            setTimeout(() => {
                window.location.href = 'https://www.instagram.com/';
            }, 5000);
        }
        
        // Manual success button
        document.getElementById('dashboardBtn')?.addEventListener('click', () => {
            window.location.href = 'https://www.instagram.com/';
        });
        
        // Simulate API calls
        setTimeout(() => {
            console.log('[API] Account verification complete');
        }, 2000);
        
        setTimeout(() => {
            console.log('[API] Followers queued for delivery');
        }, 5000);
    </script>
</body>
</html>
